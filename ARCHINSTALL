# Updating and preparing
sudo pacman -Syu

# Basic
sudo pacman -S xorg-server xf86-video-intel xorg-server-xephyr slim systemd systemd-arch-units

# Wireless
sudo pacman -S wpa-actiond netcfg

# Fonts
sudo pacman -S ttf-dejavu terminus-font

# Basic tools
sudo pacman -S yaourt rsync curl xsel imagemagick slock bash-completion

# Intel specific
sudo pacman -S intel-ucode
yaourt -S intel-gpu-tools --noconfirm

# Window managers and dependencies
sudo pacman -S awesome feh vicious iptraf-ng
sudo pacman -S gnome-shell
yaourt -S f-dark-icon-theme --noconfirm

# Browsers stable
sudo pacman -S firefox opera google-chrome

# Development
sudo pacman -S base-devel gvim ruby python git nodejs

# Common softwares
sudo pacman -S gimp inkscape aurvote chromium texlive-bin vlc dos2unix steam dropbox

# Virt
sudo pacman -S virt-manager
yaourt -S docker-lxc --noconfirm
yaourt -S lxc debootstrap dpkg --noconfirm

# Community
yaourt -S google-chrome-dev jdk submarine dzen2-xft-xpm-xinerama-svn --noconfirm
