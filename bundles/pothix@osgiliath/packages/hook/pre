#!/bin/sh

echo "installing specific packages for osgiliath"
echo "Updating and preparing"
sudo pacman -Syu

sudo pacman -S --noconfirm kernel-eee

echo "Installing basic packages"
sudo pacman -S --noconfirm xorg-server slim openssh

echo "Installing wireless packages"
sudo pacman -S --noconfirm wpa_supplicant netcfg

echo "Installing fonts"
sudo pacman -S --noconfirm ttf-dejavu terminus-font

echo "Installing basic tools"
sudo pacman -S --noconfirm yaourt rsync curl xsel imagemagick slock bash-completion flashplugin pulseaudio-alsa icedtea-web-java7

echo "Installing stable browsers"
sudo pacman -S --noconfirm chromium

echo "Installing development tools"
sudo pacman -S --noconfirm base-devel gvim ruby python git

echo "Installing common softwares"
sudo pacman -S --noconfirm texlive-bin vlc

exit 0
