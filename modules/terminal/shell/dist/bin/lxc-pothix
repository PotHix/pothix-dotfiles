if [ `uname -n` == "mordor" ]
then
  ubuntu=nazgul
  debian=sauron
  archlinux=morgoth
else
  ubuntu=gandalf
  debian=elrond
  archlinux=iluvatar
fi

# Ubuntu precise pangolin
sudo lxc-create -n $ubuntu -t ubuntu -- --release precise --arch amd64

# Debian squeeze
sudo SUITE=squeeze lxc-create -n $debian -t debian

# Archlinux
sudo pacman-key --init && sudo pacman-key --populate
sudo lxc-create -n $archlinux -t archlinux /var/lib/lxc/$archlinux
