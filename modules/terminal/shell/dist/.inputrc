# Changing some readline vi keys to use with colemak layout.
set editing-mode vi

# Keymaps for when we're in command mode (e.g., after hitting ESC)
set keymap vi-command

"n": next-history
"e": prev-history
"i": forward-char

"l": vi-insertion-mode

###########################################################
# Keymaps for when we're in insert (i.e., typing stuff in) mode
set keymap vi-insert

"n": self-insert
"e": self-insert
"i": self-insert

"l": self-insert
